# Normalize line endings
* text=auto

# Include code files in language stats
*.py linguist-detectable=true
*.ipynb linguist-detectable=true
Dockerfile linguist-detectable=true
*.html linguist-detectable=true

# Optional: still exclude data files or model files
*.pkl linguist-detectable=false
*.csv linguist-detectable=false
*.txt linguist-detectable=false
